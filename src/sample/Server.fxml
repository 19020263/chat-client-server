<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ServerController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="600.0">
            <children>
                <Button fx:id="btnListen" layoutX="540.0" layoutY="28.0" mnemonicParsing="false" onAction="#btnListenClicked" text="Listen" />
                <Button fx:id="btnSendMessage" layoutX="531.0" layoutY="357.0" mnemonicParsing="false" onAction="#btnSendMessageClicked" prefHeight="36.0" prefWidth="60.0" text="Send" />
                <TextArea fx:id="messArea" editable="false" layoutX="17.0" layoutY="89.0" prefHeight="263.0" prefWidth="574.0" />
                <TextField fx:id="messField" layoutX="80.0" layoutY="363.0" onAction="#btnSendMessageClicked" prefHeight="25.0" prefWidth="437.0" />
                <Separator layoutY="71.0" prefHeight="0.0" prefWidth="600.0" />
                <Label alignment="CENTER" layoutX="14.0" layoutY="363.0" prefHeight="25.0" prefWidth="60.0" text="Server" />
                <Label alignment="CENTER" layoutX="440.0" layoutY="28.0" prefHeight="25.0" prefWidth="32.0" text="Port" />
                <TextField fx:id="portField" layoutX="475.0" layoutY="28.0" prefHeight="25.0" prefWidth="60.0" promptText="192.168.56.1" text="9888" />
                <Label alignment="CENTER" layoutX="5.0" layoutY="9.0" prefHeight="57.0" prefWidth="221.0" text="Server Chat" textFill="#0f29ee">
                    <font>
                        <Font name="Arial Bold" size="30.0" />
                    </font>
                </Label>
            <Label layoutX="325.0" layoutY="32.0" text="Host: 192.168.56.1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            </children>
        </AnchorPane>
    </children>
</GridPane>
